<a
	href='/rooms/new'
	type='button'
	class='btn btn-sm btn-outline-secondary mb-3'
>Create</a>
{{#each rooms}}
	<div class='card mb-4 box-shadow col-6'>
		<img class='card-img-top img-thumbnail' src='{{this.imageUrl}}' />
		<div class='card-body'>
			<h3>{{this.name}}</h3>
			<p class='card-text'>{{this.description}}</p>
			<div class='d-flex justify-content-between align-items-center'>

				<div class='btn-group'>
					<a
						href='/rooms/{{this._id}}'
						type='button'
						class='btn btn-sm btn-outline-secondary mb-3'
					>View</a>
					{{#if this.isOwner}}
						<form action='/rooms/{{this._id}}/delete' method='post'>
							<button
								type='submit'
								class='btn btn-sm btn-outline-secondary'
							>Delete</button>
						</form>
						<a
							href='/rooms/{{this._id}}/edit'
							type='button'
							class='btn btn-sm btn-outline-secondary mb-3'
						>Edit</a>
					{{/if}}
				</div>

				<small class='text-muted mt-3'>Owned by {{this.owner.username}}</small>
			</div>
		</div>
	</div>
{{/each}}